<?xml version="1.0" encoding="utf-8" standalone="no" ?><root>
    <Display classname="ED::CBuildingProps">
        <Class>ED::CDisplayBuilding</Class>
        <Model>B_Beehive</Model>
        <Banner>Default</Banner>
        <Anim/>
    </Display>

    <Logic classname="EGL::CBeeHiveProps">
        <Class>EGL::CBuilding</Class>
        <Cost>
            <GoodAmount>
                <GoodType>G_Wood</GoodType>
                <Amount>3</Amount>
            </GoodAmount>
        </Cost>
        <RequiresFertileSoilToBuild>true</RequiresFertileSoilToBuild>
        <CanBeBuildOnOuterRim>true</CanBeBuildOnOuterRim>
        <CannotBePlacedOnMilitaryUnits>true</CannotBePlacedOnMilitaryUnits>
        <FlattenOnBuild>true</FlattenOnBuild>
	<IsHeightLocking>true</IsHeightLocking>
	<MayRemoveEntities>true</MayRemoveEntities>
        <AccessCategory>AccessCategoryBuilding</AccessCategory>
        <NeedsPlayer>true</NeedsPlayer>
        <ForceNoPlayer>false</ForceNoPlayer>
        <CanBeKnockedDown>true</CanBeKnockedDown>
        <MaxHealth>5</MaxHealth>
        <EntityCategories>
            <EntityCategory>BeeHive</EntityCategory>
            <EntityCategory>AttackableBuilding</EntityCategory>
        </EntityCategories>
        <RepairBuildingTL>TL_WORKER_REPAIR</RepairBuildingTL>
        <ApproachPos>
            <X>100</X>
            <Y>-150</Y>
        </ApproachPos>
        <ApproachR>0</ApproachR>
        <DoorPos>
            <X>100</X>
            <Y>-150</Y>
        </DoorPos>
            <BlockingAreas>
                <BlockingArea>
                <Blocked1>
                    <X>-300</X>
                    <Y>100</Y>
                </Blocked1>
                <Blocked2>
                    <X>300</X>
                    <Y>-100</Y>
                </Blocked2>
                </BlockingArea>
            </BlockingAreas>
            <BuildBlockingAreas>
                <BuildBlockingArea>
                <Blocked1>
                    <X>-300</X>
                    <Y>100</Y>
                </Blocked1>
                <Blocked2>
                    <X>300</X>
                    <Y>-200</Y>
                </Blocked2>
                </BuildBlockingArea>
            </BuildBlockingAreas>
        <Exploration>0</Exploration>
        <AffectsAnimalFleePath>false</AffectsAnimalFleePath>
        <FarmType>B_Beekeeper</FarmType>
        <SoundImpactType>Wood</SoundImpactType>

    </Logic>
    <Behaviors>

        <Behavior>
            <Logic classname="EGL::CAlertableBehaviorProps">
                <Class>EGL::CAlertableBehavior</Class>
                <Radius>500</Radius>
                <LeaveRadiusFactor>3.0</LeaveRadiusFactor>
                <TurnsTillAlert>2</TurnsTillAlert>
                <AlertableByCategory>AccessCategorySettler</AlertableByCategory>
                <RequiredFamiliarityToAvoidAlert>BeeHive</RequiredFamiliarityToAvoidAlert>
            </Logic>
        </Behavior>
        <Behavior>
            <Logic classname="EGL::CStockBehaviorProps">
                <Class>EGL::CStockOutBehavior</Class>
                <MaxAmountOnStock>1</MaxAmountOnStock>
                <AddsToGlobalPlayerStock>false</AddsToGlobalPlayerStock>
                <GoodTypes>
                    <GoodType>G_Honeycomb</GoodType>
                </GoodTypes>
            </Logic>
        </Behavior>
        <Behavior>
            <Logic classname="EGL::CGrowFoodBehaviorProps">
                <Class>EGL::CGrowFoodBehavior</Class>
                <GoodType>G_Honeycomb</GoodType>
                <GrowthRate>0.05</GrowthRate>
                <TemperatureMinimum>0.0</TemperatureMinimum>
                <CheckForFertileSoil>true</CheckForFertileSoil>
                <FertileModel>B_Beehive</FertileModel>
                <SemiFertileModel>B_Beehive</SemiFertileModel>
            </Logic>
        </Behavior>
         <Behavior>
            <Logic classname="EGL::CBeeHiveBehaviorProps">
                <Class>EGL::CBeeHiveBehavior</Class>
                 <SwarmEffect>FX_Bees</SwarmEffect>
                 <GoodType>G_Honeycomb</GoodType>                
            </Logic>
        </Behavior>
    </Behaviors>
    <MapEditor>
    <TreePosition>Buildings\Outer Rim</TreePosition>
    <ShowInTree>true</ShowInTree>
    <Clime>Generic</Clime>
    <Scalable>false</Scalable>
    <TemplateResistant>true</TemplateResistant>
    </MapEditor>
</root>
