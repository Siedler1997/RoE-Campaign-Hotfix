<?xml version="1.0" encoding="utf-8" standalone="no" ?><root>

    <Display classname="ED::CEntityProps">
        <Class>ED::CDisplaySettler</Class>
        <Model>Units\Misc_Unit\U_Saboteur</Model>
        <DrawPlayerColor>True</DrawPlayerColor>
    </Display>

    <Logic classname="EGL::CThiefProps">
        <Class>EGL::CThief</Class>
        <AccessCategory>AccessCategoryAttackableSettler</AccessCategory>
        <PlayerSectorType>PlayerSectorTypeThief</PlayerSectorType>
        <MaxHealth>60</MaxHealth>
        <HealingSeconds>10</HealingSeconds>
        <HealingPoints>15</HealingPoints>

        <NeedsPlayer>true</NeedsPlayer>
        <ForceNoPlayer>false</ForceNoPlayer>
        <AdjustWalkAnimSpeed>true</AdjustWalkAnimSpeed>
        <Exploration>30</Exploration>
        <IdleTaskList>TL_MILITARY_DEFEND</IdleTaskList>
        <DoesntAlert>
            <EntityType>BeeHive</EntityType>
        </DoesntAlert>
        <Familiar>
            <With>SheepPasture</With>
            <With>CattlePasture</With>
        </Familiar>

        <EntityCategories>
            <EntityCategory>Military</EntityCategory>
			<EntityCategory>AttackableSettler</EntityCategory>
			<EntityCategory>Melee</EntityCategory>
            <EntityCategory>Thief</EntityCategory>
        </EntityCategories>

        <IsSelectable>true</IsSelectable>

        <Cost>
            <GoodAmount>
                <GoodType>G_Gold</GoodType>
                <Amount>120</Amount>
            </GoodAmount>
        </Cost>

        <ShowInMiniMap>0.8</ShowInMiniMap>

        <HiddenModel>Units\Misc_Unit\U_Saboteur_Invisible</HiddenModel>
        <DetectedModel>Units\Misc_Unit\U_Saboteur</DetectedModel>
        <SoundImpactType>Leather</SoundImpactType>
		<SoundProjectileType>Lance</SoundProjectileType>

    </Logic>

    <Behaviors>

        <!-- ANIMATION -->
        <Behavior>
            <Logic classname="EGL::CAnimationBehaviorExProps">
                <Class>EGL::CBehaviorAnimationEx</Class>

                <DefaultAnimation>Misc_Unit\U_Saboteur_Idle1</DefaultAnimation>
                <AnimSet>SET_SABOTEUR</AnimSet>
            </Logic>
            <Display classname="ED::CBehaviorProps">
                <Class>ED::CDisplayBehaviorAnimation</Class>
            </Display>
        </Behavior>

        <!-- MOVEMENT -->
        <Behavior>
            <Logic classname="EGL::CMilitaryMovementBehaviorProps">
                <Class>EGL::CMilitaryMovementBehavior</Class>
                <Speed>450</Speed>
                <RotationSpeed>300</RotationSpeed>
                <!--<MoveTaskList>TL_MILITARY_WALK</MoveTaskList>
                <MoveIdleAnim>Thin\U_Thin_Normal_Stand</MoveIdleAnim>-->
            </Logic>
            <Display classname="ED::CBehaviorProps">
                <Class>ED::CDisplayBehaviorMovement</Class>
            </Display>
        </Behavior>

        <!-- THIEF -->
        <Behavior>
            <Logic classname="EGL::CThiefBehaviorProps">
                <Class>EGL::CThiefBehavior</Class>
                <DefendTL>TL_MILITARY_DEFEND</DefendTL>
                <MoveTaskList>TL_MILITARY_WALK</MoveTaskList>

                <DefendRange>0</DefendRange>
                <AttackMoveRange>0</AttackMoveRange>

                <MaxGoldAmount>400</MaxGoldAmount>
                <DetectionRange>2000</DetectionRange>

                <DetectionCategoryList>
                    <EntityCategory>Leader</EntityCategory>
                    <EntityCategory>Hero</EntityCategory>
                </DetectionCategoryList>

				<AmmunitionType>G_TorchAmmunition</AmmunitionType>
				<AmmunitionLimit>1</AmmunitionLimit>
				
				<TargetCategoryList>
					<!-- Bonus damage against knight -->
					<TargetCategory>
						<!-- don't remove  the empty tags, otherwise the data isn't shown correctly in the XML balancer! -->
						<EntityCategoryList>
							<EntityCategory>Hero</EntityCategory>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory/>
						</EntityCategoryList>

						<AttackModeList>
							<AttackMode>
								<BattleTL>TL_BATTLE_MELEE</BattleTL>
								<!-- if ApplyDamageModifiers is false, the damage isn't modified by City Reputation and TerritoryBonus -->
								<ApplyDamageModifiers>true</ApplyDamageModifiers>

								<MinRange>0</MinRange>
								<MaxRange>200</MaxRange>
								<MaxHeightDeltaToTarget>100</MaxHeightDeltaToTarget>
								<CanAttackOverWalls>false</CanAttackOverWalls>
								<CooldownThousandths>3000</CooldownThousandths>
								<Damage>
									<DiceCount>0</DiceCount>
									<FaceCount>0</FaceCount>
									<BaseValue>30</BaseValue>
								</Damage>
							</AttackMode>

							<!-- ranged combat  (those empty tags are needed to show all unit xmls correctly in the XML balancer  -->
							<AttackMode>
								<BattleTL/>
								<ApplyDamageModifiers>true</ApplyDamageModifiers>
								<MinRange/>
								<MaxRange/>
								<MaxHeightDeltaToTarget/>
								<CanAttackOverWalls>false</CanAttackOverWalls>
								<CooldownThousandths/>
								<ProjectileEffect/>
								<ProjectileOffsetHeight/>
								<ProjectileOffsetFront/>
								<Damage>
									<DiceCount/>
									<FaceCount/>
									<BaseValue/>
								</Damage>
								<NoMinRangeWhenNotOnGround>false</NoMinRangeWhenNotOnGround>
							</AttackMode>

						</AttackModeList>
					</TargetCategory>

					<!-- Plain attack -->
					<TargetCategory>
						<!-- don't remove  the empty tags, otherwise the data isn't shown correctly in the XML balancer! -->
						<EntityCategoryList>
							<EntityCategory>Hero</EntityCategory>
							<EntityCategory>Leader</EntityCategory>
							<EntityCategory>AttackableSettler</EntityCategory>
							<EntityCategory>Thief</EntityCategory>
							<EntityCategory/>
							<EntityCategory/>
						</EntityCategoryList>

						<AttackModeList>
							<AttackMode>
								<BattleTL>TL_BATTLE_MELEE</BattleTL>
								<!-- if ApplyDamageModifiers is false, the damage isn't modified by City Reputation and TerritoryBonus -->
								<ApplyDamageModifiers>true</ApplyDamageModifiers>

								<MinRange>0</MinRange>
								<MaxRange>200</MaxRange>
								<MaxHeightDeltaToTarget>100</MaxHeightDeltaToTarget>
								<CanAttackOverWalls>false</CanAttackOverWalls>
								<CooldownThousandths>3000</CooldownThousandths>
								<Damage>
									<DiceCount>0</DiceCount>
									<FaceCount>0</FaceCount>
									<BaseValue>15</BaseValue>
								</Damage>
							</AttackMode>

							<!-- ranged combat  (those empty tags are needed to show all unit xmls correctly in the XML balancer  -->
							<AttackMode>
								<BattleTL/>
								<ApplyDamageModifiers>true</ApplyDamageModifiers>
								<MinRange/>
								<MaxRange/>
								<MaxHeightDeltaToTarget/>
								<CanAttackOverWalls>false</CanAttackOverWalls>
								<CooldownThousandths/>
								<ProjectileEffect/>
								<ProjectileOffsetHeight/>
								<ProjectileOffsetFront/>
								<Damage>
									<DiceCount/>
									<FaceCount/>
									<BaseValue/>
								</Damage>
								<NoMinRangeWhenNotOnGround>false</NoMinRangeWhenNotOnGround>
							</AttackMode>

						</AttackModeList>
					</TargetCategory>

					<!-- Torching buildings -->
					<TargetCategory>
						<DisableAutoAttack>true</DisableAutoAttack>

						<!-- don't remove  the empty tags, otherwise the data isn't shown correctly in the XML balancer! -->
						<EntityCategoryList>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory>OuterRimBuilding</EntityCategory>
							<EntityCategory>CityBuilding</EntityCategory>
							<EntityCategory>SabotatableBuilding</EntityCategory>
						</EntityCategoryList>

						<AttackModeList>
							<AttackMode>
								<BattleTL>TL_BATTLE_MELEE</BattleTL>
								<!-- if ApplyDamageModifiers is false, the damage isn't modified by City Reputation and TerritoryBonus -->
								<ApplyDamageModifiers>false</ApplyDamageModifiers>

								<MinRange>0</MinRange>
								<MaxRange>800</MaxRange>
								<ProjectileEffect>FXBomb</ProjectileEffect>
								<MaxHeightDeltaToTarget>2000</MaxHeightDeltaToTarget>
								<CanAttackOverWalls>false</CanAttackOverWalls>
								<CooldownThousandths>10000</CooldownThousandths>
								<Damage>
									<DiceCount>0</DiceCount>
									<FaceCount>0</FaceCount>
									<BaseValue>250</BaseValue>
								</Damage>
								<BuildingFireSize>10</BuildingFireSize>
								<DamageRadiusList>
									<!-- Must be sorted from inner to outer. -->
									<DamageRadius>
										<Radius>150</Radius>
										<Percentage>100</Percentage>
									</DamageRadius>
									<DamageRadius>
										<Radius>300</Radius>
										<Percentage> 50</Percentage>
									</DamageRadius>
									<DamageRadius>
										<Radius>450</Radius>
										<Percentage> 25</Percentage>
									</DamageRadius>
								</DamageRadiusList>
								
								<!--ConsumeAmmunition>true</ConsumeAmmunition-->
							</AttackMode>
						</AttackModeList>
					</TargetCategory>

					<!-- Capturing / attacking  merchants and siege engines -->
					<TargetCategory>
						<DisableAutoAttack>true</DisableAutoAttack>
						<!-- don't remove  the empty tags, otherwise the data isn't shown correctly in the XML balancer! -->
						<EntityCategoryList>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory>AttackableMerchant</EntityCategory>
							<EntityCategory>HeavyWeapon</EntityCategory>
						</EntityCategoryList>

						<AttackModeList>
							<AttackMode>
								<BattleTL>TL_BATTLE_MELEE</BattleTL>
								<!-- if ApplyDamageModifiers is false, the damage isn't modified by City Reputation and TerritoryBonus -->
								<ApplyDamageModifiers>true</ApplyDamageModifiers>

								<MinRange>0</MinRange>
								<MaxRange>200</MaxRange>
								<MaxHeightDeltaToTarget>100</MaxHeightDeltaToTarget>
								<CanAttackOverWalls>false</CanAttackOverWalls>
								<CooldownThousandths>3000</CooldownThousandths>
								<Damage>
									<DiceCount>0</DiceCount>
									<FaceCount>0</FaceCount>
									<BaseValue>15</BaseValue>
								</Damage>
							</AttackMode>
						</AttackModeList>
					</TargetCategory>

					<!-- This category is only used to disable auto-attack for carnivores  -->
					<TargetCategory>
						<DisableAutoAttack>true</DisableAutoAttack>
						<!-- don't remove  the empty tags, otherwise the data isn't shown correctly in the XML balancer! -->
						<EntityCategoryList>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory/>
							<EntityCategory>AttackableAnimal</EntityCategory>
						</EntityCategoryList>
						<AttackModeList>
							<AttackMode>
								<BattleTL>TL_BATTLE_MELEE</BattleTL>
								<!-- if ApplyDamageModifiers is false, the damage isn't modified by City Reputation and TerritoryBonus -->
								<ApplyDamageModifiers>true</ApplyDamageModifiers>

								<MinRange>0</MinRange>
								<MaxRange>200</MaxRange>
								<MaxHeightDeltaToTarget>100</MaxHeightDeltaToTarget>
								<CanAttackOverWalls>false</CanAttackOverWalls>
								<CooldownThousandths>3000</CooldownThousandths>
								<Damage>
									<DiceCount>0</DiceCount>
									<FaceCount>0</FaceCount>
									<BaseValue>15</BaseValue>
								</Damage>
							</AttackMode>

							<!-- ranged combat -->
							<AttackMode>
								<BattleTL/>
								<ApplyDamageModifiers>true</ApplyDamageModifiers>
								<MinRange/>
								<MaxRange/>
								<MaxHeightDeltaToTarget/>
								<CanAttackOverWalls>false</CanAttackOverWalls>
								<CooldownThousandths/>
								<ProjectileEffect/>
								<ProjectileOffsetHeight/>
								<ProjectileOffsetFront/>
								<Damage>
									<DiceCount/>
									<FaceCount/>
									<BaseValue/>
								</Damage>
								<NoMinRangeWhenNotOnGround>false</NoMinRangeWhenNotOnGround>
							</AttackMode>

						</AttackModeList>
					</TargetCategory>
				</TargetCategoryList>
            </Logic>
        </Behavior>

        <!-- DYING -->
        <Behavior>
            <Logic classname="EGL::CBehaviorPropsDying">
                <Class>EGL::CBehaviorDying</Class>
                <DyingTaskList>TL_DIE</DyingTaskList>
            </Logic>
        </Behavior>

        <!-- PARTICULES -->
        <Behavior>
            <Logic classname="EGL::CBehaviorProps">
                <Class>EGL::CParticleEffectAttachmentBehavior</Class>
            </Logic>
            <Display classname="ED::CBehaviorProps">
                <Class>ED::CParticleEffectAttachmentBehavior</Class>
            </Display>
        </Behavior>

    </Behaviors>

</root>