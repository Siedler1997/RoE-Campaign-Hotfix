    <Logic classname="EGL::CWallSegmentProps">
        <Class>EGL::CWallSegment</Class>
        <AccessCategory>AccessCategoryBuilding</AccessCategory>
        <MapFileDontSave>true</MapFileDontSave>
        <EntityCategories>
            <EntityCategory>Wall</EntityCategory>
            <EntityCategory>CityWallSegment</EntityCategory>
        </EntityCategories>
        <NeedsPlayer>true</NeedsPlayer>
        <ForceNoPlayer>false</ForceNoPlayer>
        <Worker>U_WallConstructionWorker</Worker> <!-- construction only -->
        <MaxWorkers>0</MaxWorkers>                <!-- construction only -->
        <MaxHealth>600</MaxHealth>

        <Exploration>0</Exploration>
        <TurretType>B_WallTurret_NA</TurretType>
        <AcceptableTurretTypes>
            <TurretType>B_WallGateTurret_NA</TurretType>
        </AcceptableTurretTypes>
        <CanBeKnockedDown>true</CanBeKnockedDown>
        <CanTakeFireDamage>false</CanTakeFireDamage>
        <FlattenOnBuild>false</FlattenOnBuild>
	<MayRemoveEntities>true</MayRemoveEntities>
        <IsHeightLocking>true</IsHeightLocking>
        <CanBeBuildOnOuterRim>true</CanBeBuildOnOuterRim>
        <MaxHeightDelta>300</MaxHeightDelta>
        <!-- Note: if you change the maximal length for wall segments you
        should also change the max attack range of ballista defending it -->
        <MaxLength>2800</MaxLength>
        <MinMountableLength>1000</MinMountableLength>
        <WallHeight>600</WallHeight>
        <IsMountable>true</IsMountable>
        <SoldierSlotCount>6</SoldierSlotCount>
        <DamagedModelID>Buildings/B_WallSegment_Decal</DamagedModelID>
        <CollapseEffectID>E_WallCollapse</CollapseEffectID>
        <CollapseTime>1.5</CollapseTime>
        <AlarmRepairBuildingTL>TL_WORKER_REPAIR_ALARM</AlarmRepairBuildingTL>
        <AlarmRepairMaterial>G_Stone</AlarmRepairMaterial>
        <AlarmRepairProvider>G_Stone_Supplier</AlarmRepairProvider>
        <MaxFloorFireSize>0</MaxFloorFireSize>
        <Cost>
            <GoodAmount>
                <GoodType>G_Stone</GoodType>
                <Amount>2</Amount>
            </GoodAmount>
        </Cost>

    <ApproachPos>
        <X>220</X>
        <Y>-500</Y>
    </ApproachPos>
    <ApproachR>0</ApproachR>
    <DoorPos>
        <X>220</X>
        <Y>-50</Y>
    </DoorPos>
    <BlockingAreas>
